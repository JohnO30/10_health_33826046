<h2>My Activities</h2>

<% if (entries && entries.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Activity Type</th>
        <th>Duration (mins)</th>
        <th>Intensity</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <% entries.forEach(entry => { %>
        <tr>
          <td><%= entry.date %></td>
          <td><%= entry.activity_type %></td>
          <td><%= entry.duration_minutes %></td>
          <td><%= entry.intensity %></td>
          <td><%= entry.notes %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No activities logged yet. <a href="/entries/add">Add your first activity</a>.</p>
<% } %>