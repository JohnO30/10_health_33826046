<!-- Page heading for user's personal activity log -->
<h2>My Activities</h2>

<!-- Conditional rendering - check if entries array exists and contains data -->
<% if (entries && entries.length > 0) { %>
  <!-- Table to display all user activities in structured format -->
  <table>
    <!-- Table header row with column titles -->
    <thead>
      <tr>
        <th>Date</th>
        <th>Activity Type</th>
        <th>Duration (mins)</th>
        <th>Intensity</th>
        <th>Notes</th>
      </tr>
    </thead>
    <!-- Table body containing activity data -->
    <tbody>
      <!-- Loop through each entry in the entries array -->
      <% entries.forEach(entry => { %>
        <!-- Display each entry as a table row -->
        <tr>
          <td><%= entry.date %></td>
          <td><%= entry.activity_type %></td>
          <td><%= entry.duration_minutes %></td>
          <td><%= entry.intensity %></td>
          <td><%= entry.notes %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <!-- Message shown when no activities have been logged yet -->
  <p>No activities logged yet. <a href="/entries/add">Add your first activity</a>.</p>
<% } %>