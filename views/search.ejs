<h2>Search Activities</h2>

<form action="/search" method="POST">
    <label for="keyword">Search by keyword:</label>
    <input type="text" id="keyword" name="keyword" placeholder="e.g., running, gym" required>
    
    <input type="submit" value="Search">
</form>

<script>
    // Set the selected search type if it was passed in the query
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const type = urlParams.get('search_type');
        if (type) {
            document.getElementById('search_type').value = type;
        }
    });
</script>