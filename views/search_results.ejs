<!-- Page heading displaying the search keyword entered by user -->
<h2>Search Results for "<%= keyword %>"</h2>

<!-- Conditional rendering - check if results array is empty or doesn't exist -->
<% if (!results || results.length === 0) { %>
  <!-- Message displayed when no matching activities are found -->
  <p>No matching activities found.</p>
<% } else { %>
  <!-- Table to display search results in structured format -->
  <table>
    <!-- Table header row with column titles -->
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Activity</th>
      <th>Duration (min)</th>
      <th>Intensity</th>
      <th>Notes</th>
    </tr>
    <!-- Loop through each result in the results array -->
    <% results.forEach(function(e) { %>
      <!-- Display each result as a table row with activity details -->
      <tr>
        <td><%= e.date %></td>
        <td><%= e.username %></td>
        <td><%= e.activity_type %></td>
        <td><%= e.duration_minutes %></td>
        <td><%= e.intensity %></td>
        <td><%= e.notes %></td>
      </tr>
    <% }); %>
  </table>
<% } %>

<!-- Navigation link to return to the search page -->
<p><a href="<%= BASE_URL %>/search">Back to search</a></p>
